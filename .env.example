# ========================
# OPENAI configuration
# ========================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION_ID=your_openai_org_id_here

# ========================
# ELEVENLABS configuration
# ========================
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# any voice_id from your ElevenLabs account
ELEVENLABS_VOICE_ID=your_voice_id_here   

# recommended model: cheap and fast (multilanguage)
ELEVENLABS_MODEL=eleven_flash_v2_5         

# output format (MP3 44.1kHz 128kbps)
ELEVENLABS_OUTPUT=mp3_44100_128             

# ========================
# APP behavior
# ========================
# (optional) automatically trigger phase 2 after phase 1
AUTO_FASE2=0

# (optional) automatically trigger phase 3 after phase 2
AUTO_FASE3=0

# ========================
# VIDEO assets
# ========================
# path to logo image (absolute or relative)
# VID_LOGO_IMAGE=/srv/tarot/assets/video/logo.png   

# path to background image (absolute or relative)
# VID_BG_IMAGE=/srv/tarot/assets/video/bg.jpg

# ========================
# SERVER configuration
# ========================
PORT=3000

# ========================
# DATABASE configuration (MariaDB/MySQL)
# ========================
DB_HOST=localhost
DB_USER=your_db_user_here    
DB_PASSWORD=your_db_password_here
DB_NAME=your_db_name_here
DB_PORT=3306
DB_CONNECTION_LIMIT=5

# ========================
# ENVIRONMENT
# ========================
NODE_ENV=development
